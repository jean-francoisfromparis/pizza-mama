{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}

  <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        {% trans %}Vous êtes connecté en tant que{% endtrans %}
        {{ app.user.username }},
        <a href="{{ path('app_logout') }}">{% trans %}Déconnexion{% endtrans %}</a>
      </div>
    {% endif %}


    {#
                                                      Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                                      See https://symfony.com/doc/current/security/remember_me.html
    
                                                      <div class="checkbox mb-3">
                                                          <label>
                                                              <input type="checkbox" name="_remember_me"> Remember me
                                                          </label>
                                                      </div>
                                                  #}


    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <h1 class="h3 mb-3 font-weight-normal text-center">{% trans %}Connectez-vous s'il vous plaît !{% endtrans %}</h1>
        <div class="card mb-3 border boder-2 mx-auto" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <img src="{{ asset('images/site/20210705085325-60e2c88503f04-Tartuffo.png') }}" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body text-center justify-content-center">
                <h5 class="card-title  text-center ">Card title</h5>
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control w-75 mx-auto" autocomplete="email" required autofocus>
                <label for="inputPassword">{% trans %}Mot de passe{% endtrans %}</label>
                <input type="password" name="password" id="inputPassword" class="form-control w-75 mx-auto" autocomplete="current-password" required>
                <p class="card-text text-center">
                  <button class="btn btn-lg btn-primary my-2" type="submit">
                    {% trans %}Connexion{% endtrans %}
                  </button>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
    <div class="col-md-4"></div>
  </div>
{% endblock %}
