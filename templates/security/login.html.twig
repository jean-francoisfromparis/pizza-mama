{% extends 'security/layout.html.twig' %}

{% block title %}Connectez-vous !
{% endblock %}

{% block body %}

  <form method="post">
    {% if error %}
      <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
      <div class="mb-3">
        {% trans %}Vous êtes connecté en tant que{% endtrans %}
        {{ app.user.username }},
        <a href="{{ path('app_logout') }}">{% trans %}Déconnexion{% endtrans %}</a>
      </div>
    {% endif %}
    {#
                                   Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                   See https://symfony.com/doc/current/security/remember_me.html

                                             <div class="checkbox mb-3">
                                                 <label>
                                                     <input type="checkbox" name="_remember_me"> Remember me
                                                 </label>
                                             </div>
                                         #}
    <div class="row position">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="">
          <h1 class="h3 mb-5 font-weight-normal text-center position1">{% trans %}Connectez-vous s'il vous plaît !{% endtrans %}</h1>

          <div class="card my-5 border boder-2 mx-auto position2 position-relative" style="max-width: 540px;">
            <div class="rounded-circle circle position2 position-absolute top-0 start-50 translate-middle pizza-circle"></div>
            <div class="row g-0">
              <div class="col-md-6">
                <img src="{{ asset('build/images/pizza.jpg') }}" class="img-fluid rounded-start d-none d-md-block" alt="miam une pizza" style="max-width:270px; max-height:466px">
              </div>
              <div class="col-md-6">
                <div class="card-body text-center justify-content-center my-4">
                  <div class="form-floating margintop mb-3">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mx-auto mt-5" autocomplete="email" placeholde="email" required autofocus>
                    <label for="inputEmail">{% trans %}Email{% endtrans %}</label>
                  </div>
                  <div class="form-floating mb-3">
                    <input type="password" name="password" id="inputPassword" class="form-control mx-auto my-2" placeholder="mot de passe" autocomplete="current-password" required>
                    <label for="inputPassword">{% trans %}Mot de passe{% endtrans %}</label>
                  </div>
                  <button class="btn btn-default mt-2" type="submit">
                    {% trans %}Connexion{% endtrans %}
                  </button>
                  <a class="btn btn-default mt-2" href="{{ path('app_presentation_gallery') }}">retour à la commande</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
    <div class="col-md-4"></div>
  </div>
{% endblock %}
